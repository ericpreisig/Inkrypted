<UserControl x:Class="Inkrypted.View.HelpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Inkrypted.View"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d"
             d:DesignHeight="400">
    <Grid>
        <StackPanel Margin="10" Width="400" VerticalAlignment="Stretch">
            <Expander Header="Sécurité" IsExpanded="False">
                <TextBlock Text="Les données sont chiffrées en AES (Rijndael) sous 256bits" TextWrapping="Wrap" />
            </Expander>
            <Expander Header="Modification de la clé" IsExpanded="False">
                <TextBlock Text="Lors de la modification de la clé, les données sont tout d'abord déchiffrées avec l'ancienne clé, puis rechiffrées à l'aide de la nouvelle clé " TextWrapping="Wrap" />
            </Expander>
            <Expander Header="Chiffrement" IsExpanded="False">
                <TextBlock Text="Pour chiffrer un fichier, déplacez-le de l'explorateur de gauche, à l'explorateur de droite" TextWrapping="Wrap" />
            </Expander>
        </StackPanel>
    </Grid>
</UserControl>